{% extends 'problem/layout_index.html.twig' %}
{% set show = "solution" %}
{% block main %}
    <section>
        <h1>{{ problem.letter }}.{{ problem.title }}</h1>
        <h3>Solution:</h3>
        {% if problem.proof is not null %}
            <p>
                {{ problem.proof }}
            </p>
        {% else %}
            <p>
                Unfortunately there's no explanation for this problem yet
            </p>
        {% endif %}

        <h3>Code:</h3>
        {% if problem.solution is not null %}
            <p>
                {{ problem.solution }}
            </p>
        {% else %}
            <p>
                Unfortunately there's no code solution for this problem yet
            </p>
        {% endif %}
    </section>
{% endblock %}