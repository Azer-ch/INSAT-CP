{% extends 'problem/layout.html.twig' %}
{% block main %}
    <div class="problem-wrapper p-2">
        <h1>{{ problem.letter }}.{{ problem.title }}</h1>
        <pre>{{ problem.statement }}</pre>

        <section>
            <h3>input:</h3>
            <pre>
                                {{ problem.inputSpec }}
                            </pre>
        </section>
        <section>
            <h3>output:</h3>
            <pre>
                                {{ problem.outputSpec }}
                            </pre>
        </section>
        <div class="container">
            {% for sample in problem.sampleIn %}
                <div class="row mt-3">
                    <div class="col-md-5 examples input">
                        INPUT:
                        <button data-clipboard-target="#input1"
                                class="tocopy float-right"
                                data-toggle="popover"
                        >
                            <i alt="copy" class="fas fa-copy"></i>
                        </button>
                        <pre class="mt-1" id="input1">{{ sample.input }}</pre>
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-5 examples output">
                        OUTPUT:
                        <button data-clipboard-target="#output1" class="tocopy float-right">
                            <i alt="copy" class="fas fa-copy"></i></button>
                        <pre class="mt-1" id="output1">{{ sample.output }}</pre>
                    </div>
                </div>
            {% endfor %}

        </div>

    </div>
{% endblock %}