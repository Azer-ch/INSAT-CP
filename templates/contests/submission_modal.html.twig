{%  block  modal %}
        <!-- Modal -->
        <div class="modal fade" id="sub{{ submission.id }}" tabindex="-1" role="dialog" aria-labelledby="sub{{ submission.id }}Title" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                                <div class="modal-header">
                                        <h5 class="modal-title" id="sub{{ submission.id }}Title">
                                                Submission_Id  #{{ submission.id }}
                                                ------ Problem {{ submission.problem.Letter}} {{ submission.problem.title }}
                                        </h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                        </button>
                                </div>
                                <div class="modal-body ">
                                        <pre class="pre-scrollable">
                                        <code>
                                        {{ submission.code }}
                                        </code>
                                        </pre>
                                </div>
                                <div class="modal-footer">
                                        <div class="mr-auto">
                                                <h4 class="d-inline-block ">Verdict :</h4>
                                                <h4 class="d-inline-block font-weight-light
                                                        {% if   submission.status.id < 3%} text-warning
                                                        {% elseif submission.status.id == 3 %} text-success
                                                        {% else %} text-danger {% endif %}">
                                                        {{ submission.status.description }}
                                                </h4>

                                        </div>
                                        <button type="button" class="btn btn-primary">  Copy <i class="pl-2 far fa-copy"></i></button>
                                </div>
                        </div>
                </div>
        </div>

{% endblock %}
