{% extends 'contestBase.html.twig' %}
{% block title %}Contest {{ id }}{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('contest') }}
{% endblock %}
{% block content %}
    {% if status.status =='running' %}
        {%  include 'Timer.html.twig' with {'headline1': '', 'headline2': '','remaining': status['remaining_time_before_end'] } %}
    {% endif %}
    <table class="table table-hover" id="table">
        <tr class="table bg-dark" style="color: white">
            <th scope="row">#</th>
            <th scope="row">Name</th>
        </tr>
        {% for problem in problems %}
            <tr>
                <td>
                    <a href="{{ path("problem", {id: problem.contest.id, letter: problem.letter}) }}">
                        {{ problem.letter }}
                    </a>
                </td>
                    <td>
                        <a href="{{ path("problem", {id: problem.contest.id, letter: problem.letter}) }}">
                        {{ problem.title }}
                        </a>
                    </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
