{% extends 'headerBase.html.twig' %}
{% block title %}  Register {{ id }}{% endblock %}

{% block body %}
    <div class="container mt-5 mb-3 text-center align-content-center">
        {% include 'Timer.html.twig' with {'headline1': contest.title, 'headline2': "Before Contest",'remaining': status['remaining_time_before_start'] } %}
        <span>The contest will start exactly on {{ contest.startDate|date("m/d/Y") }} at
            {{ contest.startDate|format_datetime('none','full',"hh:mm:ss") }} UTC +1  </span>

        {% if registred %}
            <div class="text-success">
                You are registered for this contest<br>
                Try particing some problems to hone your skill until the contest starts!
            </div>
        {% else %}
            <a href="{{ path("contest_registration", {id: id}) }}">
                <button class="btn btn-primary ">Register</button>
            </a>
        {% endif %}
    </div>

{% endblock %}
