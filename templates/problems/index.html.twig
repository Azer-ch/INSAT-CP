{% extends 'headerBase.html.twig' %}

{% block title %}Problemset{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('contests') }}
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            {% for problem in problems %}
            {# @var problem \App\Entity\Problem #}
            <a href="{{ path('problem', {id: problem.contest.id, letter: problem.letter}) }}">
                <div class="col-3 p-2">
                    <div class="homie" style="">
                        {{ problem.letter }})
                        {{ problem.title }}
                        <br>
                        TAGS:<br>
                        {% for tag in problem.tags %}
                            {# @var tag \App\Entity\Tag #}
                            {{ tag.name }}<br>
                        {% endfor %}
                    </div>
            </a>

        </div>
        {% endfor %}
    </div>
    {{ knp_pagination_render(problems,  'pagination_template.html.twig') }}
    </div>
{% endblock %}

{% block footer %}
{% endblock %}
