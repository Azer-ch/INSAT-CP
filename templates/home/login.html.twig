{% extends 'base.html.twig' %}

{% block title %}INSATCP{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('bootswatch') }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.2/animate.min.css">
    {{ encore_entry_link_tags('login') }}
{% endblock %}
{% block background %}
    style="background-image:url('{{ asset('build/insat-login.jpg') }}');  background-repeat: no-repeat;
    background-size: cover;"
{% endblock %}
{% block body %}
    {% include 'header.html.twig' %}
    <div class="container">

        <div class="row register-form">
            <div class="col-md-8 offset-md-2">
                <form class="custom-form">
                    <h1>Sign In UwU</h1>
                    <div class="form-row form-group">
                        <div class="col-sm-4 label-column">
                            <label class="col-form-label" for="name-input-field">Username </label>
                        </div>
                        <div class="col-sm-6 input-column">
                            <label>
                                <input class="form-control" type="text" required>
                            </label>
                        </div>
                    </div>
                    <div class="form-row form-group">
                        <div class="col-sm-4 label-column">
                            <label class="col-form-label" for="name-input-field">Password&nbsp;</label>
                        </div>
                        <div class="col-sm-6 input-column">
                            <label>
                                <input class="form-control" type="text" required>
                            </label>
                        </div>

                    </div>
                    <div class="d-flex" style="justify-content: center">

                        <button class="btn btn-danger " data-bss-hover-animate="rubberBand"
                                style="border-radius:20px;" type="button">Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        {{ encore_entry_script_tags('login_js') }}
        <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    {% endblock %}
{% block footer %}{% endblock %}
